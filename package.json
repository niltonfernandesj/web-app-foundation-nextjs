{
  "name": "web-app-foundation-nextjs",
  "version": "1.0.0",
  "description": "Foundation for Web Apps that use Next.js",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-postgres && npm run migrations:up && next dev",
    "test": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand\"",
    "test:watch": "jest --watchAll --runInBand",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "services:up": "docker compose -f infra/compose.yml up -d",
    "services:down": "docker compose -f infra/compose.yml down",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/niltonfernandesj/web-app-foundation-nextjs.git"
  },
  "author": "Nilton Fernandes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/niltonfernandesj/web-app-foundation-nextjs/issues"
  },
  "homepage": "https://github.com/niltonfernandesj/web-app-foundation-nextjs#readme",
  "dependencies": {
    "async-retry": "^1.3.3",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.6.0",
    "next": "13.1.6",
    "node-pg-migrate": "^7.6.1",
    "pg": "8.12.0",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.4",
    "jest": "^29.7.0",
    "prettier": "^3.3.3"
  }
}
